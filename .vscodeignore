# Ignore TypeScript source files
src/**
**/*.ts

# Ignore configuration and build system files
.vscode/**
*.code-workspace
tsconfig.json
scripts/**

# Ignore version control + metadata
.gitignore
.git/**
npm-debug.log
yarn-error.log

# Ignore system / noise files
.DS_Store
Thumbs.db

# Ignore documentation that is not needed in VSIX
CHANGELOG.md
CONTRIBUTING.md

# Ignore node_modules by default...
node_modules/**

# ... BUT keep Sharp runtime binaries (very important)
!node_modules/sharp/**
!node_modules/@img/**
!node_modules/detect-libc/**
!node_modules/semver/**

# Keep compiled extension
!out/**
!assets/**
