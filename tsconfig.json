{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "rootDir": "src",
    "lib": ["ES2020"],
    "types": ["vscode"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true // ✅ Çakışan tip bildirim hatalarını tamamen engeller
  },
  "exclude": ["node_modules", ".vscode-test"]
}
